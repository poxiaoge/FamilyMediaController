                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_tabFirst_forthPart_xinyongkahuankuan"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/linearlayout_selector02"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageButton
                android:clickable="false"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/life_icon_huangkuan"
                android:scaleType="fitCenter"
                android:background="#0000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="信用卡还款"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_tabFirst_forthPart_banxinyongka"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/linearlayout_selector02"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageButton
                android:clickable="false"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/life_icon_xinyongka"
                android:scaleType="fitCenter"
                android:background="#0000"/>
